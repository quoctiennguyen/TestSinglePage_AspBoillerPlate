<div ng-controller="app.views.users.index as vm">
    <h1>@L("Users")</h1>
    <!--Chill page-->
    <div ui-view></div>

    <div class="row">
        <div class="col-md-12">
            <button ng-click="vm.openUserCreationModal()" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> @L("CreateNewUser")</button>
            <table class="table">
                <thead>
                    <tr>
                        <th>@L("UserName")</th>
                        <th>@L("FullName")</th>
                        <th>@L("EmailAddress")</th>
                        <th>@L("IsActive")</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="user in vm.users">
                        <td><a ui-sref="users.detail({ userId: user.id })"> {{user.userName}} </a> </td>
                        <td>{{user.fullName}}</td>
                        <td>{{user.emailAddress}}</td>
                        <td>{{user.isActive ? '@L("Yes")' : '@L("No")'}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
